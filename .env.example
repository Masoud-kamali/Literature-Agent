# Example environment configuration
# Copy this file to .env and adjust values

# vLLM Server Settings
VLLM_BASE_URL=http://localhost:8000/v1
VLLM_API_KEY=EMPTY
VLLM_MODEL_NAME=meta-llama/Llama-3.1-8B-Instruct
VLLM_TEMPERATURE=0.7
VLLM_MAX_TOKENS=1024
VLLM_TIMEOUT=120

# OpenAlex Settings (polite pool - use your real email)
OPENALEX_MAILTO=YOUR_EMAIL

# Search Settings
DEFAULT_DAYS_BACK=7
MAX_RESULTS_PER_SOURCE=50

# Reflection Settings
REFLECTION_MAX_ITERATIONS=1
REFLECTION_TEMPERATURE=0.3

# LinkedIn Settings
LINKEDIN_DRY_RUN=true
LINKEDIN_POST_MIN_WORDS=120
LINKEDIN_POST_MAX_WORDS=180

# Logging
LOG_LEVEL=INFO
